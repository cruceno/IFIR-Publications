<?xml version="1.0" encoding="utf-8"?>
<form>
 	 <fieldset name="detalle" label="COM_IFIRPUBLICACIONES_DETALLE_DE_PUBLICACION">
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
  			readonly="true" class="readonly"
  			description="JGLOBAL_FIELD_ID_DESC"/>
  		<field name="title" label="JGLOBAL_TITLE" type="text" size="255"
  			description="COM_IFIRPUBLICACIONES_DETALLE_FIELD_DETALLE_DESC"
  			class="inputbox"/>
  		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_IFIRPUBLICACIONES_DETALLE_FIELD_LANGUAGE_DESC" class="inputbox small" >
		    <option value="*">JALL</option>
		</field>
		<field name="catid" type="category" class="inputbox"
			extension="com_ifirpublicaciones"
			default=""
			label="COM_IFIRPUBLICACIONES_FIELD_CATID_LABEL" description="COM_IFIRPUBLICACIONES_FIELD_DATID_DESC"
		/>
		<field name="state" type="list"
      		label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
      		class="inputbox small" size="1" default="1" >
      		<option value="1">JPUBLISHED</option>
      		<option value="0">JUNPUBLISHED</option>
     		<option value="2">JARCHIVED</option>
      		<option value="-2">JTRASHED</option>
    	</field>
 	 </fieldset>
 	 <fieldset name="publicacion">
 	 <field name="pubid" type="text" default="0" label="COM_IFIRPUBLICACIONES_FIELD_PUBID_LABEL"
  			readonly="true" class="readonly"
  			description="COM_IFIRPUBLICACIONES_FIELD_PUBID_DESC"/>
 	 <field name="a_user_id" type="user" multiple="multiple"
      label="COMIFIRPUBLICACIONES_FIELD_ACEPTED_BY_LABEL" description="COM_IFIRPUBLICACIONES_FIELD_ACEPTED_BY_DESC" />
      
     <field name="r_user_id" type="user" multiple="multiple"
      label="COMIFIRPUBLICACIONES_FIELD_REJECTED_BY_LABEL" description="COM_IFIRPUBLICACIONES_FIELD_REJECTED_BY_DESC" />
      
 	 </fieldset>
 	 
 	 
 	 <fieldset name="divulgacion" label="COM_IFIRPUBLICACIONES_DIVULGACION_DE_PUBLICACION">
 	 	<field name="divulgacion" type="radio"
			class="btn-group btn-group-yesno"
			label="COM_IFIRPUBLICACIONES_DIVULGACION_BOOL"
			description="COM_IFIRPUBLICACIONES_FIELD_DIVULGACION_DESC"
			default="0"
		>	<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
 	 <field name="detalletext" type="editor" buttons="true"
  			class="inputbox"
  			filter="JComponentHelper::filterText"
  			label="JGLOBAL_DESCRIPTION" description="COM_IFIRPUBLICACIONES_FIELD_DIVTEXT_DESC" />
 	 </fieldset>
 	 <field name="images" type="media" directory=""
      hide_none="1" label="COM_FOLIO_FIELD_IMAGE_LABEL"
      size="40"
      description="COM_FOLIO_FIELD_IMAGE_DESC" 
    />
</form>